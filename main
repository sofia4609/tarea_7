using System;

public class Nodo
{
    public int dato;
    public Nodo sig;

    public Nodo(int d)
    {
        dato = d;
        sig = null;
    }
}

public class Lista
{
    private Nodo inicio;

    public Lista()
    {
        inicio = null;
    }

    public void AgregarInicio(int elem)
    {
        inicio = new Nodo(elem, inicio);
    }

    public void MostrarLista()
    {
        Nodo recorrer = inicio;
        while (recorrer != null)
        {
            Console.Write($"[{recorrer.dato}]-->");
            recorrer = recorrer.sig;
        }
        Console.WriteLine("NULL");
    }

    public void RevertirLista()
    {
        Nodo previo = null;
        Nodo actual = inicio;
        Nodo siguiente = null;

        while (actual != null)
        {
            siguiente = actual.sig;
            actual.sig = previo;
            previo = actual;
            actual = siguiente;
        }

        inicio = previo;
    }

    static void Main()
    {
        Lista miLista = new Lista();
        miLista.AgregarInicio(1);
        miLista.AgregarInicio(2);
        miLista.AgregarInicio(3);
        miLista.AgregarInicio(4);

        Console.WriteLine("Lista original:");
        miLista.MostrarLista();

        miLista.RevertirLista();

        Console.WriteLine("Lista revertida:");
        miLista.MostrarLista();
    }
}
